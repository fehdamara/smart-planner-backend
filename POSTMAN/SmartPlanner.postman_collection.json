        {
          "name": "Register - POST /auth/register (No Auth) + Save Tokens",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status is 201 or 200', function () {",
                  "  pm.expect([200,201]).to.include(pm.response.code);",
                  "});",
                  "",
                  "const json = pm.response.json();",
                  "if (json && json.accessToken) pm.environment.set('accessToken', json.accessToken);",
                  "if (json && json.refreshToken) pm.environment.set('refreshToken', json.refreshToken);",
                  "if (json && json.id) pm.environment.set('userId', String(json.id));"
                ]
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
